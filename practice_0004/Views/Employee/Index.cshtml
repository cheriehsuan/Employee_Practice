@model IEnumerable<practice_0004.Models.EmployeeModel>


@{
    ViewBag.Title = "Index";
}
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        var message = @Html.Raw(Json.Encode(TempData["message"]));
        alert(message);
    </script>
}

<h2>Employee List</h2>

<p>
    @Html.ActionLink("Create New", "AddOrEdit", "Employee")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Emp_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hire_date)
        </th>
